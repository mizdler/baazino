<!DOCTYPE html>
<html>
<head>
  <title>Baazino</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>



<body>
	<header>
		 <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="height:  5%">
			<div class="container">
			    <% if user_signed_in? %>
					<div class="btn-group" style="direction: ltr; float: left">
					  <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
					    حساب کاربری <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" role="menu">
					    <li><%= link_to 'پروفایل', edit_user_registration_path%></li>
					    <% if !current_user.developer.nil? %>
					    <li><%= link_to 'پنل توسعه دهنده', devgames_path%></li>
					    <% end %>
					    <li><%= link_to 'خروج', destroy_user_session_path%></li>
					  </ul>
					</div>
			    <% else %>
				    <a href="#" class="btn btn-lg btn-success" data-toggle="modal" data-target="#basicModal" style="padding-top:0;float: left">ورود</a>

				    <div class="modal fade" id="basicModal" tabindex="2" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
									<h4 class="modal-title" id="myModalLabel">ورود به حساب</h4>
								</div>
								<div class="row">
									<%= render "devise/sessions/new" %>
								</div>
							</div>
						</div>
					</div>
			    <% end %>
			</div>
		</div>
	</header>

<%= yield %>

</body>
</html>
