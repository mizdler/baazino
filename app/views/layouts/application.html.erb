<!DOCTYPE html>
<html>
	<head>
		<title>Baazino</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", media: "all", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<div id="wrapper">
			<div class = "skin-1">
				<nav id="navigation" class="navigation">

					<ul>
						<li>
							<%= link_to 'صفحه اول',  games_path %>
						</li>
						<li>
							<a href="#">اخبار</a>
						</li>
						<li>
							<a href="#">تماس با ما</a>
						</li>
						<li>
						<%= form_tag(games_path, :method => "get", id: "search-form") do %>
						  <%= text_field_tag :search, params[:search], placeholder: "جستجو" %>
						  <%= submit_tag "بگرد", :name => nil %>
						<% end %>
						</li>
					</ul>
					<div class="account-wrapper">
						<ul id="user-account-nav">
							<% if user_signed_in? %>
							<li>
								<%= link_to 'پروفایل', edit_user_registration_path%>
							</li>
							<% if !current_user.developer.nil? %>
							<li>
								<%= link_to 'پنل توسعه دهنده', devgames_path%>
							</li>
							<% end %>
							<li>
								<%= link_to 'خروج', destroy_user_session_path%>
							</li>
							<% else %>
							<li>
								<a href="#" data-toggle="modal" data-target="#basicModal" style="text-decoration:none;float: left">ورود</a>

								<div class="modal fade" id="basicModal" tabindex="2" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header">
												<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
													&times;
												</button>
												<h4 class="modal-title" id="myModalLabel">ورود</h4>
											</div>
											<div class="row">
												<%= render "devise/sessions/new" %>
											</div>
										</div>
									</div>
								</div>
							</li>

							<li>
								<%= link_to "ثبت نام", new_registration_path(resource_name) %>
							</li>
							<% end %>
						</ul><!--/ #user-account-nav-->
					</div><!--/ .account-wrapper-->

				</nav><!--/ #navigation-->
			</div>

			<%= yield %>
		</div>
	</body>
</html>
