
<div id ="edit" class="col-lg-12">
  <div class=" ed_user">
    <div class="content">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource,:html => {:class => "form-signin"}, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <% if current_user.developer.nil?%>
      <%= link_to 'برناهه نویس هستید؟', new_developer_path , :class => "btn btn-lg btn-success" %>
      <% else %>
      <%= link_to 'تنظیمات برنامه نویس', developer_path(current_user.developer), :class => "btn btn-lg btn-success" %>
      <% end %>

      

      <div class="panel panel-cascade">
        <div class="panel-body">

          <%= f.email_field :email, :autofocus => true ,class:"form-control form-cascade-control input-small" %>

          <div class="form-group">
            <div class="col-lg-1 col-md-2"></div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="form-control form-cascade-control input-small">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          </div>

          <div class="form-group">
            <div class="col-lg-1 col-md-2" style="height: 5px;"></div>
            <%= f.password_field :password, :autocomplete => "off" , class: "form-control form-cascade-control input-small" , placeholder:"پسورد جدید"%>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation , class: "form-control form-cascade-control input-small" , placeholder:"تکرار پسورد" %>
          </div>

          <div class="form-group">
            <%= f.password_field :current_password , class: "form-control form-cascade-control input-small" , placeholder:"پسورد کنونی" %>
          </div>

        </div>
      </div>

      <div><%= f.submit "Update" , class: "form-control" %></div>
    <% end %>
  </div>
</div>
</div>
