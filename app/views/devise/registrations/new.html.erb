<div class="container">

<%= form_for(resource, :html => {:class => "form-signin"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">عضویت</h2>

  <%= f.email_field :email, :autofocus => true, placeholder: "پست الکترونیکی", class: "form-control" %>

  <%= f.password_field :password, placeholder: "کلمه عبور", class: "form-control" %>

  <%= f.password_field :password_confirmation, placeholder: "تکرار کلمه عبور", class: "form-control" %>

  <div><%= f.submit "عضویت", class: "btn btn-lg btn-green btn-block" %></div>
	<%= render "devise/shared/links" %>
<% end %>

</div>
