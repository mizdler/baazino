<div class="container">

<%= form_for(resource, :html => {:class => "col-lg-4 col-lg-offset-4" ,:id =>"ne_user"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">ورود</h2>
  <%= f.email_field :email, :autofocus => true, placeholder: "پست الکترونیکی", class: "form-control" %>

  <%= f.password_field :password, class: "form-control", placeholder: "کلمه عبور" %>
  <div>
  <div class="col-lg-12" style="direction:ltr;">
    <div class="col-lg-6 forget" style="padding:0;">
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    </div>
  	<div class="col-lg-6" style = "padding-left: 0px;padding-right : 0px;">
       <%= f.submit "ورود", class: "btn btn-lg btn-success btn-block sgnbt"  %> 

  	</div>
  <% end %>
  </div>
	</div>
</div>

