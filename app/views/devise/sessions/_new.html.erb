<div class="container">

<%= form_for(resource, :html => {:class => "form-signin"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">ورود</h2>
  <%= f.email_field :email, :autofocus => true, placeholder: "پست الکترونیکی", class: "form-control" %>

  <%= f.password_field :password, class: "form-control", placeholder: "کلمه عبور" %>

  <div class="col-lg-6">
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  </div>
  <div class="col-lg-6"><%= f.submit "ورود", class: "btn btn-lg btn-primary btn-block" %></div>
  <div class="col-lg-6"><%= link_to "ثبت نام", new_registration_path(resource_name), class: "btn btn-lg btn-primary btn-block" %></div>
<% end %>
</div>
