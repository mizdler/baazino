
<div class="col-lg-12 ">
	<div class="row profile">
		<aside class="profile-info col-lg-9">
	      	<section class="panel">
	          	<div class="bio-graph-heading">
	              	Aliquam ac magna metus. Nam sed arcu non tellus fringilla fringilla ut vel ispum. Aliquam ac magna metus.
	          	</div>
	          	<div class="panel-body bio-graph-info">
	                  
	                    <%= simple_form_for(@profile ,:html => {:class =>'form-horizontal'})  do |f| %>
	                      <div class="form-group">
								<div class="col-lg-6 col-lg-offset-4">
									<%= f.text_field :firstname , class:"form-control form-cascade-control input-small"  %>
								</div>
								<label  class="col-lg-2 control-label">نام</label>
	                          
	                      </div>
						  
	                      <div class="form-group">
							<div class="col-lg-6 col-lg-offset-4">
								<%= f.text_field :lastname , class:"form-control form-cascade-control input-small"  %>
								</div>
								<label  class="col-lg-2 control-label">نام خانوادگی</label>
								
	                      </div>
						  
	                      <div class="form-group">
							<div class="col-lg-6 col-lg-offset-4">
	                              <input type="text" class="form-control form-cascade-control input-small" id="email" placeholder=" ">
	                          </div>
	                          <label  class="col-lg-2 control-label">ایمیل</label>
	                          
	                      </div>
						  
	                      <div class="form-group">
						  <div class="col-lg-6 col-lg-offset-4">
	                              <input type="text" class="form-control form-cascade-control input-small" id="mobile" placeholder=" ">
	                          </div>
	                          <label  class="col-lg-2 control-label">شماره موبایل</label>
	                          
	                      </div>
						  

	                      <div class="form-group">
                          	<div class="col-lg-6 col-lg-offset-4">
                          		<%= f.file_field :install_file , class:"file-pos" %>
                          	</div>
						  	<label  class="col-lg-2 control-label">Change Avatar</label>
	                              
                      	</div>
                      	<div class="form-group">
	                          <div class="col-lg-offset-2 col-lg-10">
	                              <%= f.submit "save" , class:"btn btn-success"%>
	                              <button type="button" class="btn btn-default">Cancel</button>
	                          </div>
	                      </div>

	                  <%end%>
	                  	
	            </div>
	          </section>
			  
	      </aside>
			<aside class="profile-nav col-lg-3">
	          <section class="panel">
	              <div class="user-heading round">
	                  <%= link_to '#' do %>
	                      <%image_tag('empty_avatar.jpg')%>
	                  <% end %>
	                  <h1>Jonathan Smith</h1>
	                  <p>jsmith@flatlab.com</p>
	              </div>

	              <ul class="nav nav-pills nav-stacked">
	                  <li><a href="profile.html"> <i class="glyphicon glyphicon-user"></i> Profile</a></li>
	                  <li><a href="profile-activity.html"  > <i class="icon-calendar"></i> Recent Activity <span class="label label-danger pull-right r-activity" style="float:left !important">9</span></a></li>
	                  <li  class="active"><a href="profile-edit.html"> <i class="icon-edit"></i> Edit profile</a></li>
	              </ul>

	          </section>
	      </aside>
	      
	  </div>
</div>