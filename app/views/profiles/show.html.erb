<style type="text/css">
body {
    color: #797979;
    background: #f1f2f7;
    font-family: 'Open Sans', sans-serif;
    padding: 0px !important;
    margin: 0px !important;
    font-size:13px;
    direction:rtl;
}
</style>
<div class="col-lg-12">
    <div class="row profile">
        <div class="col-lg-9">
		      <aside class="profile-info col-lg-12">
                <section class="panel">
                    <div class="bio-graph-heading">
                        <h1>اطلاعات کاربری</h1>
                    </div>
                    <div class="panel-body bio-graph-info">
                        <h1>اطلاعات کاربری</h1>
                        <div class="row">
                        	<div class="bio-row">
                                <p><span>نام خانوادگی </span>: <%= @profile.lastname %></p>
                            </div>

                            <div class="bio-row">
                                <p><span>نام </span>: <%= @profile.firstname %></p>
                            </div>

                            <div class="bio-row">
                                <p><span>تلفن </span>: <%= @profile.mobile %></p>
                            </div>

                            <div class="bio-row">
                                <p><span>ایمیل </span>: <%= @profile.user.email %></p>
                            </div>
                            
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                    </div>
                </section>
            </aside>
            <% if !current_user.developer.nil?%>
                <aside class="profile-info col-lg-12">
                    
                    <section class="panel">
                        <div class="bio-graph-heading">
                            <h1>مشخصات برنامه نویس</h1>
                        </div>
                        <div class="panel-body bio-graph-info">
                            <h1>مشخصات برنامه نویس</h1>
                            <div class="row">
                                <div class="bio-row">
                                    <p><span>نام کاربری </span>: <%= current_user.developer.developer_account_id %></p>
                                </div>

                                <div class="bio-row">
                                    <p><span>کد ملی </span>: <%= current_user.developer.ssid %></p>
                                </div>

                                <div class="bio-row">
                                    <p><span>تلفن </span>: <%= current_user.developer.tel %></p>
                                </div>
                                
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                        </div>
                    </section>
                </aside>

            <%end%>

        </div>
		<aside class="profile-nav col-lg-3">
            <section class="panel">

                <div class="user-heading round">
                    <%= link_to '#' do %>
	              		<% if @profile.avatar %>
							<%= image_tag @profile.avatar.url %>
						<%else%>
							<%image_tag('empty_avatar.jpg')%>
						<% end%>
	              	<% end %>
	              	<% if @profile.firstname %>
	              		<h1><%=@profile.firstname%> <%=@profile.lastname%></h1>
	              	<%end%>
	              	<p><%=current_user.email%></p>
                </div>

                <ul class="nav nav-pills nav-stacked">

                    <li class="active">
                    	<%= link_to profile_path(@profile) do %> 
                    		<i class="icon-user"></i> 
                    			پروفابل
                    	<%end%>
                    </li>

                    <li>
                    	<%= link_to edit_profile_path(@profile) do %>
                    		<i class="icon-edit"></i>
                    		ویرایش پروفایل
                    	<%end%>
                    </li>
                    <li>
                        <% if current_user.developer.nil?%>
                            <%= link_to 'برناهه نویس هستید؟', new_developer_path %>
                        <% else %>
                            <%= link_to 'تنظیمات برنامه نویس', edit_developer_path(current_user.developer) %>
                        <% end %>
                    </li>

                </ul>
            </section>
        </aside>
        


	</div>
</div>