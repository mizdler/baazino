<%= stylesheet_link_tag    "comment", media: "all", "data-turbolinks-track" => true %>
<div class = "col-lg-12" style="margin-top:20px;">
	<div class="gameshow col-lg-l2">
	  	<div class="detail col-lg-12">
	        <div class="download col-lg-9" >
	          	<div class="clo-lg-3"></div>
	          	<div class="clo-lg-6">

		            <div id = "gmn">
		              	<h2><%= @game.game_name %></h2>
		            </div>

		            <div id = "devn">
		              	<h4>برنامه نویس: <%= @game.developer.user.email %></h4>
		            </div>

		            <div id = "typ">
		              	<a href = "#"> action</a>
		            </div>

		            <div id = "dlbt">
		              	<div class="btn-group">
		                	<button type="button" class="btn btn-success col-log-4" id = "wishlist"> add to wish list</button>
		                	<%=link_to "دانلود", download_game_path, method: :get, class:"btn btn-success clo-lg-4"%>
		              	</div>
		            </div>

		            <div class="price">
						قیمت:<%= @game.price %> تومان
					</div>
					<div class="version">
						نسخه:<%= @game.version %>
					</div>
					<div class="line col-lg-8 col-lg-offset-2"></div>


					<div class="col-lg-12">

							<div class="col-lg-4 col-lg-offset-9">
								<div class="follow-widget widget-body">
					            	<ul>
					            		<li>
							            	<%= link_to  like_game_path(@game) ,method: :put  do%>
							            		<i class="fa fa-thumbs-o-up"></i>
							            		<%= @game.get_likes.size %>
						            		<%end%>
					            		</li>
					            		<li>
											<%= link_to dislike_game_path(@game), method: :put do %>
												<i class="fa fa-thumbs-o-down"></i>
												<%= @game.get_dislikes.size %>
						            		<%end%>
						            	</li>
				            		</ul>
				            	</div>
				            </div>
				    </div>
	          	</div>
	        </div>

	        <div class="col-lg-3 ">
	            <% if @game.cover_photo %>
					<%= image_tag @game.cover_photo.url , class:"image" %>
				<% end%>
	        </div>

		</div>

		<div id ="comm" class="col-lg-12">
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-12">
						<div class="widget">
							<div class="widget-header">
								<i class="icon-file"></i>
								<h3>Comments</h3>
							</div>
							<div class="widget-content">

								<div class="timeline-messages">
								<% @game.comments.each do |comment| %>
									<div  class="msg-time-chat">
										<div href="#" class="message-img"><img class="avatar" src="images/avatar.jpg" alt=""></div>
										<div class="message-body msg-in">
											<span class="arrow"></span>
											<div class="text">
												<p class="attribution">
												<% if comment.user.profile != nil %>
													<%=comment.user.profile.firstname%>
												<%end%>
												<% if comment.user.profile != nil %>
													<%=comment.user.profile.lastname%>
												<%end%>
												 <%=comment.created_at%></p>
												<p style="font-size:25px;"><%= comment.body %></p>
											</div>
										</div>
									</div>
								<% end %>
								</div>
								<% if current_user != nil %>
								<%= form_for([@game, @game.comments.build]) do |f|  %>
								<div  class="chat-form">
									<div class="input-cont">
										<%=f.text_area :body, :html=>{ placeholder:"Type a comment here..."}%>
									</div>
									<%=f.submit "send" , class:"btn-cont btn btn-warning"%>
								</div>
								<% end %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>