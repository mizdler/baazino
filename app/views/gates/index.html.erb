<h1>Listing gates</h1>

<table>
  <thead>
    <tr>
      <th>Bank name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gates.each do |gate| %>
      <tr>
        <td><%= gate.bank_name %></td>
        <td><%= link_to 'Show', gate %></td>
        <td><%= link_to 'Edit', edit_gate_path(gate) %></td>
        <td><%= link_to 'Destroy', gate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

